extends layout


block content
  script(src="//d3js.org/d3.v3.min.js")
  script(src="/javascripts/angularApp_Media.js")


  .container
    .row



      ul( class='nav nav-tabs')
        li.active
          a(href="#media", aria-controls='media', role='tab', data-toggle='tab') media consumed
        li
          a(href="#media_created", aria-controls='media_created', role='tab', data-toggle='tab') media created
        li
          a(href="#bar_chart", aria-controls='bar_chart', role='tab', data-toggle='tab') bar chart
        li
          a(href="#bubbles", aria-controls='bubbles', role='tab', data-toggle='tab') bubble chart
        li
          a(href="#map", aria-controls='map', role='tab', data-toggle='tab') where've I been?


      .tab-content
        div(ng-controller="MainCtrl", role='tabpanel', class='tab-pane active', id='media')
          h1 media consumed
          table.table.table-striped
            thead
              th title {{testing}}
              th author
              th genre
            tbody
                tr(ng-repeat='medium in media')
                  td {{medium.title}}
                  td {{medium.author}}
                  td {{medium.genre}}


        div(ng-controller='MediaCreatedCtrl',role='tabpanel', class='tab-pane', id='media_created')
              h1 media created
              table.table.table-striped
                thead
                  th title
                  th description
                tbody
                  tr(ng-repeat='medium in media_created')
                    td {{medium.title}}
                    td {{medium.description}}





        div(role='tabpanel', class='tab-pane', id='bar_chart')
            #bar_chart
            script(src='/javascripts/d3_media_charts.js')
            //Ã¥script(src='/javascripts/bar_chart.js')





        div(role='tabpanel', class='tab-pane', id='bubbles')
          script(src='/javascripts/CustomTooltip.js')

          #pagination_div
            ul.pagination
              li.active
                a(onclick="return false", id="centered_button") lump together
              li
                a(onclick="return false", id="show_media") seperate by media

          svg#chart_bubble_test


        div(role='tabpanel', class='tab-pane', id='map')
          #map_div
          script(src='/javascripts/map_make.js')

